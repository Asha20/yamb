{
	"name": "yamb",
	"private": true,
	"version": "1.0.0",
	"description": "Play Yamb with friends online",
	"main": "index.js",
	"scripts": {
		"start": "node src/server/dist/server.js",
		"build": "npm run client:build && npm run server:build",
		"test": "jest",
		"client:build": "webpack --config src/client/webpack.config.js --env production",
		"client:watch": "webpack --config src/client/webpack.config.js --env development -d --watch",
		"server:build": "webpack --config src/server/webpack.config.js --env production",
		"server:watch": "tsnd --no-notify --project src/server/tsconfig.json --require tsconfig-paths/register src/server/src/server.ts",
		"prettier": "prettier --write",
		"lint": "eslint --max-warnings=0 --fix src/ --ext .js,.ts"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.{js,ts,json,css}": [
			"npm run prettier"
		],
		"src/**/*.{js,ts}": [
			"npm run lint"
		]
	},
	"author": "Vukašin Stepanović <vukasinstepanovic@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.7",
		"@types/jest": "^26.0.7",
		"@types/mithril": "^2.0.3",
		"@types/nanoid": "^2.1.0",
		"@types/node": "^14.0.27",
		"@types/ws": "^7.2.6",
		"@typescript-eslint/eslint-plugin": "^4.6.1",
		"@typescript-eslint/parser": "^4.6.1",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^4.0.0",
		"eslint": "^7.13.0",
		"eslint-config-prettier": "^6.15.0",
		"html-webpack-plugin": "^4.3.0",
		"husky": "^4.3.0",
		"jest": "^26.1.0",
		"lint-staged": "^10.5.1",
		"mini-css-extract-plugin": "^0.9.0",
		"prettier": "^2.1.2",
		"sass": "^1.29.0",
		"sass-loader": "^10.1.0",
		"ts-jest": "^26.1.3",
		"ts-loader": "^8.0.1",
		"ts-node-dev": "^1.0.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^3.9.7",
		"webpack": "^4.44.0",
		"webpack-cli": "^3.3.12",
		"webpack-node-externals": "^2.5.0",
		"winston": "^3.3.3"
	},
	"dependencies": {
		"express": "^4.17.1",
		"mithril": "^2.0.4",
		"nanoid": "^3.1.12",
		"ws": "^7.3.1"
	},
	"engines": {
		"node": "12.x"
	}
}
