{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"baseUrl": ".",
		"paths": {
			"common": ["src/common"],
			"common/*": ["src/common/*"]
		}
	}
}
